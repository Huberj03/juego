@model juego.Models.Jugador

<div class="card">
    <div class="card-body">
        <h4>Agregar Nuevo Jugador</h4>

        <div style="display: flex; flex-direction: column;">
            <form asp-action="Edit">
                <input type="hidden" asp-for="IdJugador" />
                <div class="form-group" style="margin-bottom: 10px;">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control">
                </div>
                <div style="display: flex; justify-content: flex-start;">
                    <input type="submit" value="Grabar" class="btn btn-primary" style="max-width: 150px; margin-right: 10px;">
                    <a asp-action="Index" class="btn btn-secondary" style="max-width: 150px;">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>